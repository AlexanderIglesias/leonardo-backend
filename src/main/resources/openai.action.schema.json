{
  "openapi": "3.1.0",
  "info": {
    "title": "SENASoft Metrics API",
    "version": "1.0.0",
    "description": "API for SENASoft competition metrics and statistics"
  },
  "servers": [
    {
      "url": "https://3.134.102.125.nip.io/api/v1",
      "description": "Production server v1"
    }
  ],
  "paths": {
    "/metrics/scalar": {
      "get": {
        "operationId": "getScalarData",
        "summary": "Obtener métricas escalares de SENASoft",
        "responses": {
          "200": {
            "description": "Lista de métricas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": true,
                    "properties": {
                      "description": {
                        "type": "string"
                      },
                      "value": {
                        "oneOf": [
                          {"type": "number"},
                          {"type": "string"}
                        ],
                        "nullable": true
                      }
                    },
                    "required": [
                      "description",
                      "value"
                    ]
                  }
                },
                "examples": {
                  "ok": {
                    "summary": "Ejemplo mínimo",
                    "value": [
                      {
                        "description": "# Aprendices inscritos únicos",
                        "value": 775
                      },
                      {
                        "description": "% de perfiles DEV Backend",
                        "value": "43.5%"
                      }
                    ]
                  }
                }
              },
              "text/plain": {
                "schema": {
                  "oneOf": [
                    {
                      "type": "string",
                      "description": "Texto plano; puede contener JSON serializado."
                    },
                    {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "additionalProperties": true
                      }
                    }
                  ]
                }
              }
            }
          },
          "default": {
            "description": "Error inesperado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              },
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/metrics/by-center": {
      "get": {
        "operationId": "getMetricsByCenter",
        "summary": "Obtener métricas por centro de formación",
        "responses": {
          "200": {
            "description": "Lista de métricas por centro de formación",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "centerName": {
                        "type": "string"
                      },
                      "department": {
                        "type": "string"
                      },
                      "totalApprentices": {
                        "type": "number"
                      },
                      "instructorsRecommended": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "githubUsers": {
                        "type": "number"
                      },
                      "englishB1B2": {
                        "type": "number"
                      }
                    },
                    "required": ["centerName", "department", "totalApprentices"]
                  }
                },
                "examples": {
                  "ok": {
                    "summary": "Ejemplo de centro",
                    "value": [
                      {
                        "centerName": "SENA - Centro de Biotecnología Industrial",
                        "department": "Cundinamarca",
                        "totalApprentices": 45,
                        "instructorsRecommended": [
                          "María García López",
                          "Carlos Andrés Rodríguez"
                        ],
                        "githubUsers": 32,
                        "englishB1B2": 28
                      }
                    ]
                  }
                }
              }
            }
          },
          "default": {
            "description": "Error inesperado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              },
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/metrics/by-program": {
      "get": {
        "operationId": "getMetricsByProgram",
        "summary": "Obtener métricas por centro y programa de formación",
        "responses": {
          "200": {
            "description": "Lista de métricas por centro y programa",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "centerName": {
                        "type": "string"
                      },
                      "programName": {
                        "type": "string"
                      },
                      "apprenticesCount": {
                        "type": "number"
                      }
                    },
                    "required": ["centerName", "programName", "apprenticesCount"]
                  }
                },
                "examples": {
                  "ok": {
                    "summary": "Ejemplo de programa",
                    "value": [
                      {
                        "centerName": "SENA - Centro de Biotecnología Industrial",
                        "programName": "Análisis y Desarrollo de Software",
                        "apprenticesCount": 35
                      }
                    ]
                  }
                }
              }
            }
          },
          "default": {
            "description": "Error inesperado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              },
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/metrics/by-department": {
      "get": {
        "operationId": "getMetricsByDepartment",
        "summary": "Obtener métricas por departamento de Colombia",
        "responses": {
          "200": {
            "description": "Lista de métricas por departamento",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "department": {
                        "type": "string"
                      },
                      "apprenticesCount": {
                        "type": "number"
                      }
                    },
                    "required": ["department", "apprenticesCount"]
                  }
                },
                "examples": {
                  "ok": {
                    "summary": "Ejemplo de departamento",
                    "value": [
                      {
                        "department": "Cundinamarca",
                        "apprenticesCount": 145
                      }
                    ]
                  }
                }
              }
            }
          },
          "default": {
            "description": "Error inesperado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              },
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
